<% 
    title = "Trang đăng nhập";
    layout = "../layout/";
%> 
<%- include ( layout + 'layout1') %>
<div class="row justify-content-center" style="margin-bottom:10%">
    <h3>Đăng nhập</h3>
</div>
<div class="row" style="margin:0; padding:0;">
    <form action="/login" method="POST" class="col">
        <div class="form-group row">
            <label for="email" class="text-left col-3">Email</label>
            <input type="email" class="form-control col" id="email" aria-describedby="emailHelp"
                placeholder="Email" name="email">
        </div>
        <div class="form-group row">
            <label for="password" class="text-left col-3">Mật khẩu</label>
            <input type="password" class="form-control col" id="password" placeholder="Password" name="password">
        </div>
        <div class="form-group form-check row">
            <label class="text-left">
                Chưa có tài khoản ? 
                <a href="/regist">Đăng ký</a>
            </label>
        </div>
        <button type="submit" class="btn btn-primary col-5 offset-3">Đăng nhập</button>
    </form>
</div>
<%- include( layout + 'layout1-end') %> 