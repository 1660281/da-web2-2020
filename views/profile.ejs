<% title = "Trang sửa đổi thông tin cá nhân" %>

<%- include('header') %>
<h2 class="text-center">Sửa đổi thông tin</h2>
<form action="/admin/profile" method="POST">
    <input type="text" value="<%- user.id %>" name="id" hidden>
    <div class="form-group">
        <label for="email">Thư điện tử</label>
        <input type="email" class="form-control" id="email" aria-describedby="emailHelp" value="<%- user.email %>"
            name="email">
    </div>
    <div class="form-group">
        <label for="displayName">Họ tên</label>
        <input type="text" class="form-control" id="displayName" value="<%- user.displayName %>" name="displayName">
    </div>
    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
</form>
<div>
    <% if (typeof result === 'object' && result) { %>
        <% if (result.success) { %>
        <span class="text-success">
            <%= result.message %>
        </span>
        <% } else { %>
        <span class="text-danger">
            <%= result.message %>
        </span>
        <% } %>
    <% } %>
</div>